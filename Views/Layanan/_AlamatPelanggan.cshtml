function loadPropertyType(){
    callApi({
        url: '/api/Layanan/JenisProperti?Id=1',
        method: 'GET',
        success: function (data) {
            var html= `<option value=""></option>`;
            html += $.map(data, function (item) {
                var scr = "";
                scr = `
                    <option value="${item.nama_jenis}:${item.harga}:${item.id}">${item.nama_jenis}</option>
                `;
                return scr;
