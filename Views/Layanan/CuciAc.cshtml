@{
    ViewData["Title"] = "Layanan";
    ViewData["Header"] = "2";
    ViewData["Footer"] = "3";
    ViewData["HeaderName"] = "Layanan - Cuci AC";
}
<!-- CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


<style>
    /* Wizard container */
    .wizard-steps {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        position: relative;
        padding: 0 10px;
    }

    /* Garis penghubung */
    .wizard-steps::before {
        content: "";
        position: absolute;
        top: 18px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #e5e7eb;
        z-index: 0;
    }

    /* Step item */
    .wizard-step {
        text-align: center;
        position: relative;
        z-index: 1;
        flex: 1;
    }

    /* Nomor step */
    .step-number {
        width: 36px;
        height: 36px;
        line-height: 36px;
        background-color: #d1d5db;
        color: #fff;
        border-radius: 50%;
        margin: auto;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    /* Nama step */
    .step-title {
        margin-top: 6px;
        font-size: 12px;
        font-weight: 500;
        color: #6b7280;
    }

    /* Step aktif */
    .wizard-step.active .step-number {
        background-color: #2563eb;
        transform: scale(1.1);
    }
    .wizard-step.active .step-title {
        color: #2563eb;
        font-weight: 600;
    }

    /* Step selesai */
    .wizard-step.completed .step-number {
        background-color: #16a34a;
    }
    .wizard-step.completed .step-title {
        color: #16a34a;
    }

    /* Konten */
    .wizard-content {
        background: #fff;
        border-radius: 6px;
        padding: 15px;
        border: 1px solid #f0f0f0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        transition: opacity 0.3s ease;
        font-size: 14px;
    }

    /* Tombol navigasi */
    .btn-wizard {
        min-width: 100px;
        font-weight: 500;
        border-radius: 6px;
        padding: 6px 14px;
        font-size: 14px;
    }

    .wizard-footer {
        position: absolute;
        bottom: 15px;
        right: 15px;
    }
</style>

<div class="app-body">
    <div class="container">
        <div class="row pt-30">
            <div class="wizard-steps">
                <div class="wizard-step active" data-step="1">
                    <div class="step-number">1</div>
                    <div class="step-title">Layanan</div>
                </div>
                <div class="wizard-step" data-step="2">
                    <div class="step-number">2</div>
                    <div class="step-title">Jadwal</div>
                </div>
                <div class="wizard-step" data-step="3">
                    <div class="step-number">3</div>
                    <div class="step-title">Properti</div>
                </div>
                <div class="wizard-step" data-step="4">
                    <div class="step-number">4</div>
                    <div class="step-title">Alamat</div>
                </div>
                <div class="wizard-step" data-step="5">
                    <div class="step-number">5</div>
                    <div class="step-title">Bayar</div>
                </div>
            </div>

            <div id="wizardForm">
                <!-- STEP 1 -->
                <div class="wizard-content" data-step="1" style="position: relative; min-height: 200px;">
                    <div class="pb-30" id="sessionJasaLayanan">
                        @await Html.PartialAsync("_JasaLayananV2")
                        @await Html.PartialAsync("_berlangganan")
                    </div>                    

                    <!-- Tombol di pojok kanan bawah -->
                    <div class="wizard-footer">
                        <button type="button" class="btn btn-primary btn-wizard next-btn">Lanjut</button>
                    </div>
                </div>

                <!-- STEP 2 -->
                <div class="wizard-content d-none" data-step="2">
                    
                    
                    @await Html.PartialAsync("_WaktuKunjunganReguler")
                    
                    <div class="d-flex justify-content-between pt-30">
                        <button type="button" class="btn btn-secondary btn-wizard prev-btn">Kembali</button>
                        <button type="button" class="btn btn-primary btn-wizard next-btn">Lanjut</button>
                    </div>
                </div>

                <!-- STEP 3 -->
                <div class="wizard-content d-none" data-step="3">
                    <div class="pb-30" id="sessionJenisProperti">
                        @await Html.PartialAsync("_JenisProperti")
                    </div>
                    <div class="d-flex justify-content-between pt-30">
                        <button type="button" class="btn btn-secondary btn-wizard prev-btn">Kembali</button>
                        <button type="button" class="btn btn-primary btn-wizard next-btn">Lanjut</button>
                    </div>
                    
                </div>

                <!-- STEP 4 -->
                <div class="wizard-content d-none" data-step="4">
                    <div class="pb-30" id="sessionDataPelanggan">
                        @await Html.PartialAsync("_InfoKontak")
                        @await Html.PartialAsync("_AlamatPelanggan")
                    </div>
                    <div class="d-flex justify-content-between pt-30">
                        <button type="button" class="btn btn-secondary btn-wizard prev-btn">Kembali</button>
                        <button type="button" class="btn btn-primary btn-wizard next-btn">Lanjut</button>
                    </div>
                    
                </div>

                <div class="wizard-content d-none" data-step="5">
                    <div class="pb-30" id="sessionPaymentMethod">
                        @await Html.PartialAsync("_PilihMetodaPembayaran")
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary btn-wizard prev-btn">Kembali</button>
                        <button type="button" class="btn btn-danger btn-wizard" onclick="SimpanDulu()" id="btn_simpandulu">Simpan dulu</button>
                        <button type="button" class="btn btn-success btn-wizard">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var $;
    let currentStep = 1;
    
    let RegAtauMember="REG";
    let TotalHargaAkhir = 0;
    
    let cartReguler = [];
    let cartMember = [];

    let paketMember = {};

    let KunjunganReg = {};
    let KunjunganMember = [];
    let JenisProperti = {};
    let kontakPelanggan = {};
    let AlamatPelanggan = {};
    let IdUser;

    document.addEventListener('DOMContentLoaded', function () {
        if (typeof window.jQuery === 'undefined') {
            console.error('jQuery is not loaded.');
            return;
        }
        $ = window.jQuery;
        IdUser = Storage.get('userId');
        //console.log("user-di: "+Storage.get('userId'));
        showStep(currentStep);
    });
    
    function showStep(step) {

        document.querySelectorAll('.wizard-content').forEach(el => {
            el.classList.toggle('d-none', el.dataset.step != step);
        });

        document.querySelectorAll('.wizard-step').forEach(el => {
            el.classList.remove('active', 'completed');
            const stepNum = parseInt(el.dataset.step);
            if (stepNum < step) {
                el.classList.add('completed');
            } else if (stepNum === step) {
                el.classList.add('active');
            }
        });
    }

    document.querySelectorAll('.next-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            if(validasiStep(currentStep)){
                if (currentStep < 5) {
                    currentStep++;
                    showStep(currentStep);
                }
            }
        });
    });

    document.querySelectorAll('.prev-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            if (currentStep > 1) {
                currentStep--;
                showStep(currentStep);
            }
        });
    });

    // Tampilkan step pertama saat load

    function validasiStep(step) {
        if (step === 1) {
            console.log(cartReguler);
            console.log(RegAtauMember);
            console.log(TotalHargaAkhir);
            console.log(cartMember);
            //var data = Storage.get("cartReguler");
            // Pastikan data ada dan berupa array
            if (Array.isArray(cartReguler) && cartReguler.length > 0 && cartReguler != null) {
                if(RegAtauMember == "MEMBER"){
                    if(paketDipilih != null && paketDipilih != ""){
                        return true; // Lolos validasi
                    }
                    else
                    {
                        showToast("Silahkan pilih Paket jika ingin berlangganan");
                        return false; // Tidak lolos validasi
                    }
                }
                else
                {
                    return true; // Lolos validasi
                }
                
            } 
            else {
                showToast("Silahkan pilih layanan");
                return false;    
            }
            
        }
        else if(step === 2){
            if(RegAtauMember == "REG"){
                var tanggalLayanan = $("#tanggalLayanan").val();
                var jamLayanan = $("#jamLayanan").val();
                if(tanggalLayanan != "" && jamLayanan != ""){
                    KunjunganReg =
                    {
                        tanggal : tanggalLayanan,
                        jam : jamLayanan
                    }
                    console.log(KunjunganReg);
                    return true;
                }
                else{
                    showToast("Silahkan isi jadwal kunjungan");
                    return false;
                }
            }
            else if(RegAtauMember == "MEMBER"){
                KunjunganMember = [];
                var tanggalAwal = $("#tanggalAwal").val();
                if(tanggalAwal!= "" && tanggalAwal!= null){
                    for (let i = 0; i < paketMember.qty; i++) {
                        var _tgl = $(`#Tgl${i}`).val();
                        var _jam = $(`#Jam${i}`).val();
                        if(_tgl!= "" && _jam!=""){
                            KunjunganMember.push({
                                idx:i+1,
                                tgl:_tgl,
                                jam:_jam
                            });   
                        }
                        else
                        {
                            showToast("Silahkan diisi jadwal tanggal dan jam berlangganan");
                            return false;
                        }
                    }
                    
                    if(KunjunganMember.length>0){
                        console.log(KunjunganMember);
                        return true;
                    }
                    else
                    {
                        showToast("Silahkan diisi jadwal tanggal dan jam berlangganan");
                        return false;
                    }
                }
                else
                {
                    showToast("Silahkan input tanggal awal untuk berlangganan");
                    return false;
                }
            }
            
        }
        else if(step === 3){
            //var properti = Storage.get("jenis_properti");
            // Pastikan data ada dan berupa array
            if (JenisProperti!= null) {
                console.log(JenisProperti);
                return true; // Lolos validasi
            } else {
                showToast("Silakan pilih properti terlebih dahulu.");
                return false; // Tidak lolos validasi
            }
        }
        else if(step ===4){
            if(kontakPelanggan== null)
            {
                showToast("Silahkan pilih kontak yang akan dihubungi teknisi");
                return false;
            }
            if(AlamatPelanggan== null){
                showToast("Silahkan pilih Alamat yang akan dikunjungi teknisi");
                return false;
            }

            var alldata =
            {
                id: 0,
                createByIdUser: IdUser,
                kategoriLayanan: "CUCI AC",
                jenisLayanan: RegAtauMember,
                totalTransaksi: TotalHargaAkhir,
                status: 0,
                statusDeskripsi: "DRAFT",
                jenisProperti: JenisProperti,
                "kontakPelanggan":kontakPelanggan,
                "alamatPelanggan": AlamatPelanggan,
                "kunjungan": {
                        "Reguler": KunjunganReg,
                        "Member": KunjunganMember
                },
                "cartItem": {
                        "Reguler": cartReguler,
                        "Member": cartMember
                },
                "paketMember":paketMember
            }
            console.log(alldata);
            $("#listTransaksi").html("");
            renderDataTransaksi(alldata);
        }
        // Jika tidak ada validasi khusus untuk step lain, langsung lolos
        

        return true;
    }

    function SimpanDulu(){
        var alldata =
        {
            id: 0,
            createByIdUser: IdUser,
            kategoriLayanan: "CUCI AC",
            jenisLayanan: RegAtauMember,
            totalTransaksi: TotalHargaAkhir,
            status: 0,
            statusDeskripsi: "DRAFT",
            jenisProperti: JenisProperti,
            "kontakPelanggan":kontakPelanggan,
            "alamatPelanggan": AlamatPelanggan,
            "kunjungan": {
                    "Reguler": KunjunganReg,
                    "Member": KunjunganMember
            },
            "cartItem": {
                    "Reguler": cartReguler,
                    "Member": cartMember
            },
            "paketMember":paketMember
        }
        console.log(alldata);

        callApi({
            url: '/api/Transaction/SimpanDulu',
            method: 'POST',
            data:alldata,
            success: function (res) {
                console.log(res);
                @* {
                    "message": "Pemesanan berhasil disimpan",
                    "id": 46
                } *@
                Swal.fire({
                    title: '<strong>🎉 Berhasil Disimpan!</strong>',
                    html: 'Pesananmu telah ditambahkan ke keranjang.<br><small>Kamu akan diarahkan ke halaman <b>Keranjang Pesanan</b>.</small>',
                    icon: 'success',
                    showConfirmButton: true,
                    confirmButtonText: 'Lihat Keranjang',
                    customClass: {
                        popup: 'rounded-4 shadow-lg',
                        title: 'fw-bold text-success',
                        confirmButton: 'btn btn-primary px-4 py-2 rounded-pill',
                    },
                    showClass: {
                        popup: 'animate__animated animate__fadeInDown'
                    },
                    hideClass: {
                        popup: 'animate__animated animate__fadeOutUp'
                    }
                }).then(() => {
                    window.location.href = '@Url.Action("Index", "Cart")';
                });
            },
            error: function (err) {
                alert("Gagal: " + err);
            },
            onBeforeSend: function () {
                $("#btn_simpandulu").prop("disabled", true).text("Memproses...");
            },
            onComplete: function () {
                $("#btn_simpandulu").prop("disabled", false).text("Simpan Dulu");
            }
        });
    }
</script>