<script>
    var $;
    let currentStep = 1;

    let IdTrx = 0;

    let kategoriLayanan = "CUCI AC";
    
    let RegAtauMember ="REG";
    let TotalHargaAkhir = 0;
    
    let cartReguler = [];
    let cartMember = [];

    let paketMember = {};

    let KunjunganReg = {};
    let KunjunganMember = [];

    let JenisProperti = {};

    let kontakPelanggan = {};
    let AlamatPelanggan = {};
    let keluhanPerbaikan = [];

    let IdUser;
    
    document.addEventListener('DOMContentLoaded', function () {
        if (typeof window.jQuery === 'undefined') {
            console.error('jQuery is not loaded.');
            return;
        }
        $ = window.jQuery;
        eventstep_btn();
        showStep(currentStep);
        var user = getUserInfo();
        if (!isValidUser(user)) {
            $("#TitleModalLogin").text("Silahkan login terlebih dahulu");
            $("#btnClsModalLogin").show();
            $('#ModalLogin').modal('show');
            return false;
        }
        else {
            IdUser = user.id;
            setDataTrx();
            loadAlamat();
            LoadDataKontak();
        }
    });
    
    function setDataTrx(){
        var DataTrx = Storage.get("DataTrx");
        
        if(!isEmptyObject(DataTrx) && DataTrx != null){
            console.log(DataTrx);
            kontakPelanggan = DataTrx.kontakPelanggan;
            AlamatPelanggan = DataTrx.alamatPelanggan;
            cartReguler = DataTrx.cartItem.Reguler;
            KunjunganReg = DataTrx.kunjungan.Reguler;
            KunjunganMember = DataTrx.kunjungan.Member;
            JenisProperti = DataTrx.jenisProperti;
            IdTrx = DataTrx.id;
            TotalHargaAkhir = DataTrx.totalTransaksi;
            paketMember = DataTrx.paketMember;
            RegAtauMember = DataTrx.jenisLayanan;
        }
    }

    function showStep(step) {
        document.querySelectorAll('.wizard-content').forEach(el => {
            el.classList.toggle('d-none', el.dataset.step != step);
        });

        document.querySelectorAll('.wizard-step').forEach(el => {
            el.classList.remove('active', 'completed');
            const stepNum = parseInt(el.dataset.step);
            if (stepNum < step) {
                el.classList.add('completed');
            } else if (stepNum === step) {
                el.classList.add('active');
            }
        });
    }

    function eventstep_btn(){
        document.querySelectorAll('.next-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if(validasiStep(currentStep)){
                    if (currentStep < 5) {
                        currentStep++;
                        showStep(currentStep);
                    }
                }
            });
        });

        document.querySelectorAll('.prev-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if (currentStep > 1) {
                    currentStep--;
                    showStep(currentStep);
                }
            });
        });
    }

    function validasiStep(step) {
        if(step === 1){
            if(isEmptyObject(kontakPelanggan))
            {
                showToast("Silahkan pilih kontak yang akan dihubungi teknisi");
                return false;
            }
            
            if(isEmptyObject(AlamatPelanggan)){
                showToast("Silahkan pilih Alamat yang akan dikunjungi teknisi");
                return false;
            }

            if(isEmptyObject(JenisProperti)){
                showToast("Silahkan pilih Jenis Properti");
                return false;
            }

            let subtotal = 0;
            cartReguler.forEach(item => {
                $(`#InputQtyLayanan${item.id}`).val(item.qty);
                $(`#SubTotal${item.id}`).text(formatRupiah(item.sub_total));
                subtotal = subtotal + item.sub_total;
            });
            $(`#TotalHargaReguler`).text(formatRupiah(subtotal));

            const totalQty = cartReguler.reduce((sum, item) => sum + (item.qty), 0);        
            ShowHideBerlangganan(totalQty);
            
            if(!isEmptyObject(paketMember)){
                document.getElementById("cekLangganan").checked = true;
                document.getElementById("paketLangganan").style.display = "flex";
                //document.getElementById("jadwalLangganan").style.display = "flex";
                document.getElementById('jadwalLangganan').style.display = '';
                //document.querySelectorAll('.card-option').forEach(c => c.classList.remove('active'));
                //$(`#paket${paketMember.id}`).classList.add('active');
                $('.card-option').removeClass('active');
                $(`#paket${paketMember.id}`).addClass('active');
            }
            else
            {
                TotalHargaAkhir = cartReguler.reduce((sum, item) => sum + (item.sub_total), 0);
            }

            console.log(TotalHargaAkhir);
        }
        if (step === 2 ) {
            console.log(cartReguler);
            console.log(RegAtauMember);
            console.log(TotalHargaAkhir);
            console.log(cartMember);
            if (Array.isArray(cartReguler) && cartReguler.length > 0 && cartReguler != null) {
                if(RegAtauMember == "MEMBER"){
                    if(paketDipilih != null && paketDipilih != ""){
                        console.log(paketMember);
                        TotalHargaAkhir = paketMember.total;
                        //console.log(TotalHargaAkhir);
                        //return true; // Lolos validasi
                    }
                    else
                    {
                        showToast("Silahkan pilih Paket jika ingin berlangganan");
                        return false; // Tidak lolos validasi
                    }
                }
                else
                {
                    if(!isEmptyObject(KunjunganReg) && KunjunganReg != null){
                        let chkExp = checkDateAndTimeVisitOrder(KunjunganReg.tanggal,KunjunganReg.jam);
                        if(chkExp){
                            showToast("Waktu visit yang diatur sebelumnya sudah expired, silahkan atur kembali");
                            $("#tanggalLayanan").val("");
                            $("#jamLayanan").val("");
                            KunjunganReg = {};
                        }
                        else
                        {
                            
                            $("#tanggalLayanan").val(KunjunganReg.tanggal);
                            $("#jamLayanan").val(KunjunganReg.jam);
                        }
                        
                    }
                    TotalHargaAkhir = cartReguler.reduce((sum, item) => sum + (item.sub_total), 0);
                    //return true; // Lolos validasi
                }
                
            } 
            else {
                showToast("Silahkan pilih layanan");
                return false;    
            }
            console.log(TotalHargaAkhir);
        }
        else if(step === 3){
            if(RegAtauMember == "REG"){
                var tanggalLayanan = $("#tanggalLayanan").val();
                var jamLayanan = $("#jamLayanan").val();
                if(tanggalLayanan != "" && jamLayanan != ""){
                    KunjunganReg =
                    {
                        tanggal : tanggalLayanan,
                        jam : jamLayanan
                    }

                    if(!isEmptyObject(JenisProperti)){
                        @* document.querySelector(
                            `input[name="JenisProperti"][value="${JenisProperti.nama_jenis}:${JenisProperti.harga}:${JenisProperti.id}"]`
                        ).checked = true; *@
                        TotalHargaAkhir = cartReguler.reduce((sum, item) => sum + (item.sub_total), 0)+JenisProperti.harga;
                    }
                    else
                    {
                        TotalHargaAkhir = cartReguler.reduce((sum, item) => sum + (item.sub_total), 0);
                    }
                    //return true;
                }
                else{
                    showToast("Silahkan isi jadwal kunjungan");
                    return false;
                }
            }
            else if(RegAtauMember == "MEMBER"){
                KunjunganMember = [];
                var tanggalAwal = $("#tanggalAwal").val();
                if(tanggalAwal!= "" && tanggalAwal!= null){
                    for (let i = 0; i < paketMember.qty; i++) {
                        var _tgl = $(`#Tgl${i}`).val();
                        var _jam = $(`#Jam${i}`).val();
                        if(_tgl!= "" && _jam!=""){
                            KunjunganMember.push({
                                idx:i+1,
                                tgl:_tgl,
                                jam:_jam
                            });   
                        }
                        else
                        {
                            showToast("Silahkan diisi jadwal tanggal dan jam berlangganan");
                            return false;
                        }
                    }
                    
                    if(KunjunganMember.length>0){
                        if(!isEmptyObject(JenisProperti)){
                            @* document.querySelector(
                                `input[name="JenisProperti"][value="${JenisProperti.nama_jenis}:${JenisProperti.harga}:${JenisProperti.id}"]`
                            ).checked = true;
                            console.log(paketMember); *@
                            TotalHargaAkhir = paketMember.total + JenisProperti.harga;
                        }
                        else{
                            TotalHargaAkhir = paketMember.total;
                        }
                        //return true;
                    }
                    else
                    {
                        showToast("Silahkan diisi jadwal tanggal dan jam berlangganan");
                        return false;
                    }
                }
                else
                {
                    showToast("Silahkan input tanggal awal untuk berlangganan");
                    return false;
                }
            }
            console.log(TotalHargaAkhir);
            if(RegAtauMember =="REG"){
                TotalHargaAkhir = cartReguler.reduce((sum, item) => sum + (item.sub_total), 0)+JenisProperti.harga;
            }
            else
            {
                TotalHargaAkhir = paketMember.total + JenisProperti.harga;
            }
            var alldata =
            {
                id: IdTrx,
                createByIdUser: IdUser,
                kategoriLayanan: "CUCI AC",
                jenisLayanan: RegAtauMember,
                totalTransaksi: TotalHargaAkhir,
                status: 0,
                statusDeskripsi: "DRAFT",
                jenisProperti: JenisProperti,
                kontakPelanggan:kontakPelanggan,
                alamatPelanggan: AlamatPelanggan,
                kunjungan: {
                    Reguler: KunjunganReg,
                    Member: KunjunganMember
                },
                cartItem: {
                    Reguler: cartReguler,
                    Member: cartMember
                },
                paketMember:paketMember,
                keluhanPerbaikan:keluhanPerbaikan
            }
            console.log(alldata);
            $("#listTransaksi").html("");
            renderDataTransaksi(alldata);
        }
        else if(step ===4){
            console.log(JenisProperti);
            if (JenisProperti== null || isEmptyObject(JenisProperti)) {
                showToast("Silakan pilih properti terlebih dahulu.");
                return false; // Lolos validasi
            }
        }
        return true;
    }

    async function SimpanTransaksi(data) {
        return new Promise((resolve, reject) => {
            callApi({
                url: '/api/Transaction/SimpanDulu',
                method: 'POST',
                data: data,
                success: function (res) {
                    resolve(res); // return hasil sukses
                },
                error: function (err) {
                    reject(err); // return error ke caller
                },
                onBeforeSend: function () {
                    $("#btn_simpandulu").prop("disabled", true).text("Memproses...");
                    $("#btnCheckOut").prop("disabled", true).text("Memproses...");
                },
                onComplete: function () {
                    $("#btn_simpandulu").prop("disabled", false).text("Simpan Dulu");
                    $("#btnCheckOut").prop("disabled", false).text("Checkout");
                }
            });
        });
    }

    async function SimpanDulu() {
        try {
            var alldata = {
                id: IdTrx,
                createByIdUser: IdUser,
                kategoriLayanan: kategoriLayanan,
                jenisLayanan: RegAtauMember,
                totalTransaksi: TotalHargaAkhir,
                status: 0,
                statusDeskripsi: "DRAFT",
                jenisProperti: JenisProperti,
                kontakPelanggan: kontakPelanggan,
                alamatPelanggan: AlamatPelanggan,
                kunjungan: {
                    Reguler: KunjunganReg,
                    Member: KunjunganMember
                },
                cartItem: {
                    Reguler: cartReguler,
                    Member: cartMember
                },
                paketMember: paketMember,
                keluhanPerbaikan: keluhanPerbaikan
            };
            var data = await SimpanTransaksi(alldata);
            console.log("Hasil simpan:", data);

            if (data) {
                Swal.fire({
                    title: '<strong>üéâ Berhasil Disimpan!</strong>',
                    html: 'Pesananmu telah ditambahkan ke keranjang.<br><small>Kamu akan diarahkan ke halaman <b>Keranjang Pesanan</b>.</small>',
                    icon: 'success',
                    showConfirmButton: true,
                    confirmButtonText: 'Lihat Keranjang',
                    customClass: {
                        popup: 'rounded-4 shadow-lg',
                        title: 'fw-bold text-success',
                        confirmButton: 'btn btn-primary px-4 py-2 rounded-pill',
                    },
                    showClass: {
                        popup: 'animate__animated animate__fadeInDown'
                    },
                    hideClass: {
                        popup: 'animate__animated animate__fadeOutUp'
                    }
                }).then(() => {
                    window.location.href = '@Url.Action("Index", "Cart")';
                });
            }

        } catch (err) {
            console.error("Gagal simpan:", err);
            Swal.fire({
                title: "‚ö†Ô∏è Gagal",
                text: "Terjadi kesalahan saat menyimpan pesanan.",
                icon: "error"
            });
        }
    }

