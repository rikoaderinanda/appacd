<div class="main-title text-left mb-4">
  <h5 class="mb-1 fw-bold text-primary">Relokasi AC</h5>
  <p class="text-muted small mb-0"></p>
</div>
<div class="mb-3">
  <label for="kapasitasAC" class="form-label fw-bold">
    <i class="bi bi-snow text-primary me-2"></i> Pilih Kapasitas AC
  </label>
  <select id="kapasitasAC" class="form-select" onchange="hitungBiaya()">
    <option value="">-- Pilih Kapasitas --</option>
    <option value="0.5">0.5 PK</option>
    <option value="1">1 PK</option>
    <option value="1.5">1.5 PK</option>
    <option value="2">2 PK</option>
    <option value="2.5">2.5 PK</option>
    <option value="3">3 PK</option>
    <option value="5">5 PK</option>
  </select>
</div>

<!-- Panel Biaya -->
<div id="panelBiaya" class="alert alert-info d-none">
  <i class="bi bi-cash-coin me-2"></i>
  Estimasi Biaya Relokasi: <span id="biayaRelokasi" class="fw-bold text-success"></span>
</div>

<script>
  function hitungBiaya() {
    const kapasitas = document.getElementById("kapasitasAC").value;
    const panel = document.getElementById("panelBiaya");
    const biayaEl = document.getElementById("biayaRelokasi");

    // Mapping biaya per kapasitas (contoh saja, bisa diganti sesuai kebutuhan)
    const biaya = {
      "0.5": 250000,
      "1": 300000,
      "1.5": 350000,
      "2": 400000,
      "2.5": 450000,
      "3": 500000,
      "5": 750000
    };

    if (kapasitas && biaya[kapasitas]) {
      biayaEl.textContent = "Rp " + biaya[kapasitas].toLocaleString("id-ID");
      panel.classList.remove("d-none");
    } else {
      panel.classList.add("d-none");
    }
  }
</script>
