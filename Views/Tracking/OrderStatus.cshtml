@{
    ViewData["Title"] = "Status Pesanan";
    ViewData["Header"] = "2";
    ViewData["Footer"] = "3";
    ViewData["HeaderName"] = "Status Pesanan";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<style>
   /* ====== Modern & Minimalist Redesign ====== */
    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: #f9fafb;
        color: #333;
    }

    /* Card utama */
    .delivery-dts {
        background: #fff;
        border-radius: 14px;
        padding: 20px;
        border: 1px solid #f0f0f0;
        box-shadow: 0 2px 6px rgba(0,0,0,0.04);
    }

    /* Header order info */
    .rc-item-img {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        background: #f1f5f9;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .rc-item-img i {
        font-size: 1.6rem;
        color: #0d6efd;
    }

    #idPesanan {
        font-weight: 600;
        font-size: 1rem;
        color: #0d6efd;
    }
    #statusTitle {
        font-weight: 600;
        font-size: 1rem;
        color: #111;
    }
    #statusDeskripsi {
        font-size: 0.88rem;
        color: #6b7280;
    }

    /* Accordion modern */
    .accordion-item {
        border: 1px solid #f0f0f0 !important;
        border-radius: 12px !important;
        margin-bottom: 12px;
        overflow: hidden;
    }
    .accordion-button {
        background: #fff;
        font-weight: 500;
        font-size: 0.95rem;
        color: #374151;
        padding: 0.85rem 1rem;
    }
    .accordion-button:not(.collapsed) {
        color: #0d6efd;
        background: #f9faff;
    }
    .accordion-button i {
        font-size: 1rem;
    }
    .accordion-body {
        font-size: 0.88rem;
        color: #444;
        padding: 1rem;
    }

    /* Stepper clean */
    #stepStatusOrder {
        margin-left: 14px;
    }
    .step {
        display: flex;
        align-items: flex-start;
        margin-bottom: 16px;
        position: relative;
    }
    .step::before {
        content: "";
        position: absolute;
        left: 10px;
        top: 22px;
        width: 2px;
        height: calc(100% - 22px);
        background: #e5e7eb;
    }
    .step:last-child::before {
        display: none;
    }
    .circle {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: #d1d5db;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        color: #fff;
        margin-right: 12px;
    }
    .circle.done {
        background: #22c55e; /* green */
    }
    .step-active .circle {
        background: #0d6efd;
    }
    .step .title {
        font-weight: 500;
        font-size: 0.9rem;
        margin-bottom: 2px;
    }
    .step .caption {
        font-size: 0.82rem;
        color: #6b7280;
    }

    /* List item */
    .list-group-item {
        border: none !important;
        padding: 8px 0;
        font-size: 0.88rem;
        color: #374151;
    }

    /* Footer */
    .gobo-custom-footer {
        background: #fff;
        border-top: 1px solid #f0f0f0;
    }
    .main-btn {
        background: #0d6efd;
        color: #fff !important;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.95rem;
        padding: 10px;
        transition: 0.2s;
    }
    .main-btn:hover {
        background: #0b5ed7;
    }

</style>

<div class="app-body pb-5">
    <div class="container py-4">
        <!-- Card Pesanan -->
        <div class="delivery-dts shadow-sm">
            <div class="d-flex align-items-center">
                <div class="rc-item-img shadow-sm">
                    <i class="bi bi-clock text-warning"></i>
                </div>
                <div class="ms-3">
                    <div id="idPesanan" class="text-primary fw-semibold fs-6"></div>
                    <div id="statusTitle" class="fw-semibold text-dark"></div>
                    <small id="statusDeskripsi" class="text-muted"></small>
                </div>
            </div>

            <!-- Accordion -->
            <div class="accordion mt-4" id="accordionOrderDetail">
                
                <!-- Status Pesanan -->
                <div class="accordion-item shadow-sm">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#collapseStatus">
                            <i class="bi bi-flag-fill me-2 text-primary"></i> Status Pesanan
                        </button>
                    </h2>
                    <div id="collapseStatus" class="accordion-collapse collapse show" data-bs-parent="#accordionOrderDetail">
                        <div class="accordion-body">
                            <div id="stepStatusOrder"></div>
                        </div>
                    </div>
                </div>

                <!-- Detail Transaksi -->
                <div class="accordion-item shadow-sm">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#collapseLayanan">
                            <i class="bi bi-tools me-2 text-warning"></i> Detail Transaksi
                        </button>
                    </h2>
                    <div id="collapseLayanan" class="accordion-collapse collapse" data-bs-parent="#accordionOrderDetail">
                        <div class="accordion-body">
                            <ul id="orderLayanan" class="list-group list-group-flush"></ul>
                        </div>
                    </div>
                </div>

                <!-- Info Pelanggan -->
                <div class="accordion-item shadow-sm">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#collapseKeluhan">
                            <i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i> Info Pelanggan
                        </button>
                    </h2>
                    <div id="collapseKeluhan" class="accordion-collapse collapse" data-bs-parent="#accordionOrderDetail">
                        <div class="accordion-body">
                            <ul id="orderKeluhan" class="list-group list-group-flush"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="gobo-custom-footer fixed-bottom py-2 border-top bg-white">
    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="main-btn w-100">Halaman Utama</a>
    </div>
</footer>

<script>
    var $;
    document.addEventListener('DOMContentLoaded', function () {
        if (typeof window.jQuery === 'undefined') {
            console.error('jQuery is not loaded.');
            return;
        }
        $ = window.jQuery;
        let token = getValidToken();
        if (token) {
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/notifikasiHub", {
                    accessTokenFactory: () => token
                })
                .withAutomaticReconnect()
                .build();
            
            connection.on("TerimaNotifikasi", msg => console.log("Broadcast:", msg));
            connection.on("UpdateStatusTrackingOrder", msg => console.log("Personal:", msg));

            connection.start()
            .then(() => console.log("✅ SignalR connected"))
            .catch(err => console.error("❌ SignalR error:", err.toString()));
            var Id = Storage.get('IdPesanan');
            if(Id == null){
                Swal.fire({
                    title: '<strong>❌ Data Tidak Ditemukan</strong>',
                    html: 'ID pesanan yang kamu cari tidak valid atau tidak tersedia.<br><small>Silakan periksa kembali atau hubungi admin jika kamu merasa ini sebuah kesalahan.</small>',
                    icon: 'error',
                    showConfirmButton: true,
                    confirmButtonText: 'Kembali',
                    customClass: {
                        popup: 'rounded-4 shadow-lg',
                        title: 'fw-bold text-danger',
                        confirmButton: 'btn btn-danger px-4 py-2 rounded-pill',
                    },
                    showClass: {
                        popup: 'animate__animated animate__fadeInDown'
                    },
                    hideClass: {
                        popup: 'animate__animated animate__fadeOutUp'
                    }
                }).then(() => {
                    window.location.href = '@Url.Action("Index", "Tracking")'; // Ganti tujuan redirect sesuai kebutuhan
                });
            }
            else
            {
                LoadStepStatus(Id);
                $("#idPesanan").text("ACD-" + formatToSixDigits(Id));
            }
        }
        else
        {
            $("#TitleModalLogin").text("Silahkan login terlebih dahulu");
            $("#btnClsModalLogin").show();
            $('#ModalLogin').modal('show');
        }
    });

    function LoadStepStatus(Id) {
        let status_order = "";
        callApi({
            url: `/api/Pemesanan/GetTrackingById?Id=${Id}`,
            method: 'GET',
            success: function (res) {
                console.log(res);

                res.data.forEach(item => {
                    status_order = item.status;
                });

                if (status_order != "") {
                    listStatusOrder(status_order);
                }

                $.map(res.data, function (item) {
                    var Keluhan = $.map(item.Keluhan, function (i) {
                        var scr = `
                            <li class="list-group-item border-0 px-0 d-flex align-items-center">
                                <i class="bi bi-dot text-danger me-2 fs-6"></i>
                                <span class="text-dark">${i.val}</span>
                            </li>
                        `;
                        return scr;
                    }).join("");

                    var layanan = $.map(item.Pesanan, function (i) {
                        var scr = `
                            <li class="list-group-item d-flex justify-content-between align-items-start px-0">
                                <div>
                                    <div class="fw-semibold">${i.nama}</div>
                                    <small class="text-muted">${i.jumlah} x ${formatRupiah(i.harga)}</small>
                                </div>
                                <span class="text-end fw-semibold text-success">${formatRupiah(item.total)}</span>
                            </li>
                        `;
                        return scr;
                    }).join("");
                    $("#orderLayanan").html(layanan);

                });

            },
            error: function (err) {
                Swal.fire('Gagal!', 'Proses gagal.', 'warning');
            },
            onBeforeSend: function () {
                $('#stepStatusOrder').html('<p class="text-center text-muted py-4">sedang memuat data.....</p>');
            },
            onComplete: function () {

            }
        });


    }

    function listStatusOrder(status_order) {
        callApi({
            url: '/api/Pemesanan/GetStepStatus',
            method: 'GET',
            success: function (res) {
                console.log(res);
                var html = $.map(res, function (item) {
                    var scr = "";
                    if (item.id < status_order) {
                        scr = `
                        <div class="step">
                            <div>
                                <div class="circle done bg-success"><i class="bi bi-check-lg"></i></div>
                            </div>
                            <div>
                                <div class="title">${item.title_sudah}</div>
                                <div class="caption">${item.deskripsi_sudah}</div>
                            </div>
                        </div>
                        `;
                    }
                    else if (item.id == status_order) {
                        scr = `
                        <div class="step step-active">
                            <div>
                                <div class="circle"><i class="'bi-arrow-repeat spinner-border spinner-border-sm'"></i></div>
                            </div>
                            <div>
                                <div class="title">${item.title}</div >
                                <div class="caption">${item.deskripsi}</div>
                            </div>
                        </div>
                        `;
                        $("#statusTitle").text(item.title);
                        $("#statusDeskripsi").text(item.deskripsi);
                    }
                    else {
                        scr = `
                        <div class="step step-active">
                            <div>
                                <div class="circle bg-dark">${item.id}</div>
                            </div>
                            <div>
                                <div class="title text-dark">${item.title}</div>
                                <div class="caption">${item.deskripsi}</div>
                            </div>
                        </div>
                        `;
                    }
                    return scr;
                }).join('');

                $('#stepStatusOrder').html(html);
            },
            error: function (err) {
                Swal.fire('Gagal!', 'Proses gagal.', 'warning');
            },
            onBeforeSend: function () {
                $('#stepStatusOrder').html('<p class="text-center text-muted py-4">sedang memuat data.....</p>');
            },
            onComplete: function () {
            }
        });
    }

    function gotoBack(){
        //window.history.back();
        window.location.href = '@Url.Action("Index", "Tracking")';
    }

    
</script>