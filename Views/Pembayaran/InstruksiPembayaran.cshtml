<style>
    .payment-card {
        background: #fff;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 1.5rem;
    }

    .payment-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .payment-header i {
        font-size: 2rem;
        color: #005baa;
    }

    .payment-header h5 {
        font-weight: 600;
        margin: 0.5rem 0 0.25rem;
    }

    .payment-header p {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .input-group .form-control {
        border-radius: 8px 0 0 8px;
        font-weight: 500;
        font-size: 1rem;
    }

    .input-group .btn {
        border-radius: 0 8px 8px 0;
    }

    .info-label {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 0.4rem;
        font-weight: 500;
    }

    .steps h5 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .steps .list-group-item {
        border: none;
        padding: 0.75rem 0;
        display: flex;
        align-items: flex-start;
    }

    .step-icon {
        width: 1.8rem;
        height: 1.8rem;
        border-radius: 50%;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #005baa;
        color: #fff;
        margin-right: 0.75rem;
        flex-shrink: 0;
    }

</style>
<div class="app-body pb-30">
    <div class="container mt-4 mb-4">
        <!-- Info Pembayaran -->
        <div class="payment-card" id="infobayar"></div>

        <!-- Instruksi Pembayaran -->
        <div class="payment-card">
            <p class="fw-semibold mb-3">Cara Pembayaran</p>
            <div class="owl-carousel" id="listInstruksi"></div>
            <div id="instructions" class="steps mt-3"></div>
        </div>
    </div>
</div>

<!-- Footer Action -->
<div class="gobo-custom-footer fixed-bottom px-3 py-2 text-center">
    <div class="container p-0">
        <div class="row g-2">
            <div class="col">
                <button onclick="backToHome()" class="btn btn-outline-danger w-100">Lihat Invoice</button>
            </div>
            <div class="col">
                <button onclick="cekStatus()" class="btn btn-success w-100">Cek Status</button>
            </div>
        </div>
    </div>
</div>
<script>
