@{
    ViewData["Title"] = "Status";
    ViewData["Header"] = "2";
    ViewData["Footer"] = "3";
    ViewData["HeaderName"] = "Profil Pengguna";
}
@await Html.PartialAsync("_formProfile")
<div class="app-body pb-30">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bg-white rounded shadow-sm p-3 mt-3">

                    <!-- Baris Atas: Foto & Tombol Edit -->
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="d-flex align-items-center">
                            <img id="photoUser" alt="User Photo"
                                class="rounded-circle me-3 shadow-sm" width="60" height="60"
                                style="object-fit: cover;">
                            <div>
                            <h6 class="mb-1 fw-semibold" id="userName">Nama Pengguna</h6>
                            <small class="text-muted d-block" id="userEmail">email@example.com</small>
                            <span class="badge bg-success mt-1" id="userBalance">Saldo: Rp 0</span>
                            </div>
                        </div>
                    </div>

                    <!-- Baris Bawah: Tombol Aksi -->
                    <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-success w-100 d-flex align-items-center justify-content-center"
                            onclick="topUpSaldo()">
                        <i class="bi bi-plus-circle me-1"></i> Top Up
                    </button>
                    <button class="btn btn-danger w-100 d-flex align-items-center justify-content-center"
                            onclick="withdrawSaldo()">
                        <i class="bi bi-cash-coin me-1"></i> Withdraw
                    </button>
                    </div>

                </div>
            </div>
            <div class="col-12">
                <div class="profile-link-list light-bg br-10 mt-3">
                    <a href="@Url.Action("Index", "Cart")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3">
                        <i class="bi bi-cart fs-5 me-3"></i>
                        Keranjang Saya
                    </a>
                    <a href="@Url.Action("Index", "Tracking")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-bag-check fs-5 me-3"></i>Pesanan Saya</a>
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-geo-alt fs-5 me-3"></i>Kelola Alamat</a>
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-bell fs-5 me-3"></i>Notifikasi</a>
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-percent fs-5 me-3"></i>Penawaran</a>
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-chat-dots fs-5 me-3"></i>Dukungan Langsung</a>
                </div>
                <div class="profile-link-list light-bg br-10 mt-3">
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-info-circle fs-6 me-3"></i>Tentang Aplikasi</a>
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-life-preserver fs-6 me-3"></i>Pusat Bantuan</a>
                    <a href="@Url.Action("Index", "Home")"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 border_bottom p-3"><i
                            class="bi bi-lock fs-6 me-3"></i>Privasi Akun</a>
                    <a href="javascript:void(0)" onclick="Logout();"
                        class="fs-7 fw-5 b-color d-flex align-items-center w-100 p-3">
                        <i class="bi bi-box-arrow-right fs-6 me-3"></i>
                        Keluar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var $;
    document.addEventListener('DOMContentLoaded', function () {
        if (typeof window.jQuery === 'undefined') {
            console.error('jQuery is not loaded.');
            return;
        }
        $ = window.jQuery;
        var user = getUserInfo();
        if (!isValidUser(user)) {
            $("#TitleModalLogin").text("Silahkan login terlebih dahulu");
            $("#btnClsModalLogin").show();
            $('#ModalLogin').modal('show');
        }
        else {
            loadUserInfo(user);
        }

    });

    function CloseModalLogin() {
        window.location.href = '@Url.Action("Index", "Home")';
        //$('#ModalLogin').modal('hide');
    }

    function loadUserInfo(user) {
        //console.log(user);
        $("#userName").text(user.nama_lengkap);
        $("#userEmail").text(user.email);
        if ($("#photoUser").length > 0 && user.photo) {
            $("#photoUser").attr("src", user.photo);
        } else {
            console.warn("Elemen #photoUser tidak ditemukan atau photo kosong");
        }
    }

    
    function Logout() {
        Swal.fire({
            title: 'ðŸšª Logout dari Aplikasi?',
            text: "Anda akan keluar dan perlu login kembali untuk mengakses fitur.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'ðŸ”’ Ya, Logout',
            cancelButtonText: 'Batal',
            customClass: {
                popup: 'rounded-4 shadow-lg',
                title: 'fw-bold text-danger',
                htmlContainer: 'text-muted',
                confirmButton: 'btn btn-danger rounded-pill px-4 py-2 me-2',
                cancelButton: 'btn btn-outline-secondary rounded-pill px-4 py-2'
            },
            buttonsStyling: false,
            showClass: {
                popup: 'animate__animated animate__fadeInDown'
            },
            hideClass: {
                popup: 'animate__animated animate__fadeOutUp'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                Storage.remove('username');
                Storage.remove('jwt');
                window.location.href = '@Url.Action("Index", "Home")';
            }
        });

    }
</script>